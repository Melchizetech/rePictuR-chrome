{
  "name": "rePicture",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension was created for rePicture",
  "homepage_url": "http://melchizetech.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"], 
      "js":[
        "js/repictur.js", 
        "src/index.js"
      ],
      "css":[
        "css/index.css"
      ]
    }
  ],
  "devtools_page": "src/devtools/devtools_background.html",
  "permissions": [
    "contextMenus",
    "*://*/*"
  ]
}